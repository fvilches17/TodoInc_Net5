<div class="card">
    <div class="card-header">
        <input class="inp-cbx"
               id="@CheckBoxId"
               type="checkbox"
               checked="@TodoRecord.IsComplete" />
        <label class="cbx" for="@CheckBoxId">
            <span>
                <svg width="12px" height="10px" viewbox="0 0 12 10">
                    <polyline points="1.5 6 4.5 9 10.5 1"></polyline>
                </svg>
            </span>
        </label>
    </div>
    <div class="card-body">
        <h5 class="card-title">
            @if (TodoRecord.IsComplete)
            {
                <del>@TodoRecord.Title</del>
            }
            else
            {
                @TodoRecord.Title
            }
        </h5>

        @if (TodoRecord.Description is not null)
        {
            <p class="card-text">@TodoRecord.Description</p>
        }

        <a href="#" class="btn btn-dark"><span class="oi oi-pencil"></span></a>
        <a href="#" class="btn btn-danger"><span class="oi oi-trash"></span></a>
    </div>
</div>

@code
{
    [Parameter]
    public TodoRecord TodoRecord { get; set; } = null!;

    private string CheckBoxId => $"cbx-{TodoRecord.Id}";

    protected override void OnInitialized()
    {
        if (TodoRecord == null)
        {
            throw new ArgumentException($"'{nameof(TodoCard)}' component initialized with empty param", nameof(TodoRecord));
        }
    }
}
